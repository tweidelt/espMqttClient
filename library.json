{
  "name": "espMqttClient",
  "keywords": "iot, home, automation, mqtt, client, esp8266, esp32",
  "description": "an MQTT client for the Arduino framework for ESP8266 / ESP32",
  "authors": [{
    "name": "Bert Melis",
    "url": "https://github.com/bertmelis"
  },
  {
    "name": "Tobias Weidelt"    
  }  
],
  "license": "MIT",
  "homepage": "https://github.com/tweidelt/espMqttClient",
  "repository": {
    "type": "git",
    "url": "https://github.com/tweidelt/espMqttClient.git"
  },
  "version": "1.4.4",
  "frameworks": "arduino",
  "platforms": [
    "espressif8266",
    "espressif32"
  ],
  "headers": [
    "espMqttClient.h",
    "espMqttClientAsync.h"
  ],
  "dependencies": [
    {
      "platforms": "espressif8266",
      "name": "ESPAsyncTCP",
      "version": "https://github.com/philbowles/ESPAsyncTCP.git#2.0.1"
    },
    {
      "platforms": "espressif32",
      "name": "AsyncTCP",
      "version": "https://github.com/philbowles/AsyncTCP.git#0.0.1"
    }
  ],
  "build": {
    "libLDFMode": "deep+"
  }
}